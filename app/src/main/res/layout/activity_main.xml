<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Nourhan Mansour"
            android:paddingLeft="110dp"
            android:textSize="18dp" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:onClick="launchFaceook"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#3949AB"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"/>
        <Button
            android:onClick="launchMessenger"
            android:id="@+id/messenger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Messenger"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#00BCD4"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"/>
        <Button
            android:onClick="launchWhatsapp"
            android:id="@+id/Whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Whatsapp"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#00C853"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/insta"
            android:onClick="launchinsta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#E65100"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Twitter"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#2196F3"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:onClick="launchTwitter"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Linkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinkedIN"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#01579B"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="launchLinkedin"/>

        <Button
            android:id="@+id/ask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AskFM"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#EF6C00"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="launchask"/>
        <Button
            android:id="@+id/tumblr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tumblr"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#1A237E"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="launchtumblr"/>
        <Button
            android:id="@+id/flicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flicker"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="#E91E63"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="launchflicker"/>

    </LinearLayout>
</ScrollView>